<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mydesign2.TuijianListviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tuijian_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文章题目"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tuijian1"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/tuiian1" />

            <ImageView
                android:id="@+id/tuijian2"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/tuijian2" />

            <ImageView
                android:id="@+id/tuijian3"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/tuijian3" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
